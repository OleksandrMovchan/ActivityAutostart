<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.activityautostart.activities.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/click_button_to_start"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/mainLabel" android:layout_marginBottom="8dp"
            android:textSize="16sp" android:textColor="@color/textColorMain"
            app:layout_constraintBottom_toTopOf="@+id/guideline"/>
    <Button
            android:text="@string/start"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:background="@drawable/btn_background"
            android:id="@+id/mainBtnStart" android:textColor="@color/textColorMain"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="6dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.5" android:id="@+id/guideline"/>

</android.support.constraint.ConstraintLayout>